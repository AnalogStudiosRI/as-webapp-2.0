<!DOCTYPE html>
<html lang="en">

  <head>

    <title>Analog Studios : Music and Recordings | {{page.title}}</title>
    {{> icon-link-tag }}
    {{> meta-tag }}

    <!-- App CSS -->
    {{#production}}
      {{#globals.app.prod.stylesheets}}
        {{> style-link-tag }}
      {{/globals.app.prod.stylesheets}}
    {{/production}}
    {{^production}}
      {{#globals.app.dev.stylesheets}}
        {{> style-link-tag }}
      {{/globals.app.dev.stylesheets}}
    {{/production}}

    <!-- Page CSS -->
    {{#page.stylesheets}}
      {{> style-link-tag}}
    {{/page.stylesheets}}

  </head>

  <body data-ng-cloak data-ng-app="{{page.app}}" data-ng-strict-di>

    <div class="container">
      <div class="col-md-1"></div>
      <div class="col-md-10 main-content">
        <!-- header directive -->
        <as-header></as-header>

        <!-- Page (controller) -->
        <section class="row" id="{{page.id}}" data-ng-controller="{{page.ctrl}}">
          {{> body }}
        </section>

        <!-- footer directive -->
        <as-footer></as-footer>
      </div>
      <div class="col-md-1"></div>
    </div>

    <!-- social media scripts -->
    {{> script-social }}

    <!-- App JS -->
    {{#production}}
      {{#globals.app.prod.scripts}}
        {{> script-tag }}
      {{/globals.app.prod.scripts}}
    {{/production}}
    {{^production}}
      {{#globals.app.dev.scripts}}
        {{> script-tag }}
      {{/globals.app.dev.scripts}}
    {{/production}}

    <!-- Page JS -->
    {{#page.scripts}}
      {{> script-tag }}
    {{/page.scripts}}

  </body>
</html>
